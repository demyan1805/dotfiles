{
    "coc.preferences.previewAutoClose": true,
    "coc.preferences.useQuickfixForLocations": true,

    "python.analysis.openFilesOnly": true,

    "python.formatting.provider": "yapf",
    "python.formatting.yapfPath": "~/.local/bin/yapf",

    "python.linting.pylintArgs": ["--load-plugins=pylint_django"],
    "python.linting.pylintEnabled": false,

    "python.linting.flake8Path": "~/.local/bin/flake8",
    "python.linting.flake8Enabled": true,

    "python.linting.mypyPath": "~/.local/bin/mypy",
    "python.linting.mypyEnabled": true,

    "python.jediEnabled": true,
    "python.sortImports.path": "~/.local/bin/isort",

    "languageserver": {
        "golang": {
            "args": [],
            "command": "gopls",
            "filetypes": ["go"],
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
        }
    }
}
