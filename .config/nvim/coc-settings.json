{
    "coc.preferences.previewAutoClose": true,
    "coc.preferences.useQuickfixForLocations": true,

    "python.analysis.openFilesOnly": true,

    "python.disableInstallationCheck": true,

    "python.formatting.provider": "black",

    "python.formatting.blackPath": "~/.local/bin/black",
    "python.formatting.blackArgs": ["-l", "120", "--skip-string-normalization"],

    "python.linting.pylintArgs": ["--load-plugins=pylint_django"],
    "python.linting.pylintEnabled": false,

    "python.linting.flake8Path": "~/.local/bin/flake8",
    "python.linting.flake8Enabled": true,

    "python.linting.mypyPath": "~/.local/bin/mypy",
    "python.linting.mypyEnabled": true,

    "python.jediEnabled": true,

    "python.sortImports.path": "~/.local/bin/isort",

    "python.workspaceSymbols.ctagsPath": "ctags.sh",

    "languageserver": {
        "golang": {
            "args": [],
            "command": "gopls",
            "filetypes": ["go"],
            "rootPatterns": ["go.mod"]
        },
        "lua": {
            "command": "lua-lsp",
            "filetypes": ["--lua"]
        }
    }
}
